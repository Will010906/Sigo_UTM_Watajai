<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_subject_name_combined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subject_name_placeholder"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            app:drawableEndCompat="@drawable/ic_arrow_down"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teacher_name_placeholder" android:textSize="14sp"
            android:textColor="#555555" android:layout_marginBottom="8dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:text="@string/label_progress"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"/>
                <TextView
                    android:id="@+id/tv_progress"
                    android:text="@string/progress_placeholder" android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/label_evaluation"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"/>
                <TextView
                    android:id="@+id/tv_evaluation"
                    android:text="@string/evaluation_placeholder"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/label_performance"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"/>
                <TextView
                    android:id="@+id/tv_desempeno"
                    android:text="@string/performance_placeholder"
                    android:textColor="@color/highlight_red"
                    android:textStyle="bold" android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/layout_units"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_units" android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_units_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/units_list_placeholder" android:textSize="14sp"
                android:textColor="@color/text_dark"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>